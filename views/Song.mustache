{{#song}}
<article class="song">
	<h1>{{title}}</h1>

	<pre{{#key}} data-key="{{.}}"{{/key}}>{{text}}</pre>

	<footer>
		<p>Written by <span class="author">Mary E. Byrne</span> &amp; <span class="author">Eleanor Hull</span>
	</footer>
	
</article>

<script type="text/javascript" src="_/jquery.transposer/jquery.transposer.js"></script>
<script type="text/javascript">
	$(function() {
		$(".song pre[data-key]").transpose();
		
		var widest = 0;
		$('.song pre span')
			.each(function()
				{
					if($(this).width() > widest)
						widest = $(this).width();
				});

		console.info(widest);
		$('.song pre')
			.css({
				'-webkit-column-width': widest,
				'-moz-column-width': widest,
				'column-width': widest
			});

	});
</script>
{{/song}}